@model ColaboradorModel
@{
    ViewData["Title"] = "Colaborador";
} 

<div class="text-center">
    <h3 >Confirmar Exclusão</h3>
    <form asp-controller="Colaborador" asp-action="Deletar" method="post">
        <p>Tem certeze que deseja excluir o colaborador @Model.Nome?</p>

        <a class="btn btn-danger" asp-controller="Colaborador" asp-action="ListarCol">Não</a>
        <button type="submit" class="btn btn-primary">Sim</button>
    </form>
</div>