@model EmpresaModel
@{
    ViewData["Title"] = "Empresa";
}
<div>
    <h3 class="text-center">Alterar Empresa</h3>
    <form asp-controller="Empresa" asp-action="Alterar" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" asp-for="Nome">
        </div>
        <div class="form-group">
            <label for="cnpj">CNPJ:</label>
            <input type="text" class="form-control" id="cnpj" asp-for="CNPJ">
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary" asp-controller="Empresa" asp-action="ListarEmp">Voltar</a>
    </form>
</div>