@model EmpresasModel
@{
    ViewData["Title"] = "Empresa";
}
<h1>@ViewData["Title"]</h1>


<div class="text-center forms">
    <h3>Empresas</h3>
    
    <a type="button" asp-controller="Empresa" asp-action="CadastrarEmp" class="btn btn1">Cadastrar Empresa</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>CNPJ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empresa in Model.GetAll())
            {
                <tr>
                    <td>@empresa.ID.ToString("D5")</td>
                    <td>@empresa.Nome</td>
                    <td>@empresa.CNPJ</td>
                    <td>
                        <div>
                            
                            <a type="button" asp-controller="Empresa" asp-route-id="@empresa.ID" asp-action="Alterar" class="btn btn1">Editar Empresa</a>
                            <a type="button" asp-controller="Empresa" asp-route-id="@empresa.ID" asp-action="Deletar" class="btn btn1">Apagar Empresa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>